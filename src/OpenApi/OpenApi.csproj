<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net7.0</TargetFramework>
        <Nullable>enable</Nullable>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <Title>Lopah Library OpenApi</Title>
        <Authors>Lopah (Daniel Ja≈°ek)</Authors>
        <RepositoryType>private</RepositoryType>
        <PackageTags>Lopah, Library, OpenAPI</PackageTags>
        <IsPackable>true</IsPackable>
        <PackageId>Lopah.AspNetCore.OpenApi</PackageId>
        <RepositoryUrl>https://github.com/Lopah/Library</RepositoryUrl>
